{
    "root": true,
    "env": { 
        "es2021": true,  
        "node": true,  
        "browser": true 
    },
    "parserOptions": { 
        "parser": "babel-eslint"  
    },
    "extends": [ 
        "eslint:recommended", 
        "prettier", 
        "@nuxtjs", 
        "plugin:prettier/recommended",
        "plugin:nuxt/recommended" 
    ],
    "plugins": [ 
        "prettier"  
    ],
    "rules": { 
        "prettier/prettier": ["error", {"printWidth": 135}]
    },
    "ignorePatterns": [
        "cypress/*", "node_modules/*", ".nuxt/*", ".github/*", "assets/*", "dist/*", "static/*", "store/*", "tests/*",
        "*.json", ".gitignore", ".gitlab-ci.yml", "nuxt.config.js", "README.md", ".env", ".editorconfig"
    ]
}
