{
    "root": true,
    "env": { 
        "es2021": true,  
        "node": true,  
        "browser": true 
    },
    "parserOptions": { 
        "parser": "babel-eslint"  
    },
    "extends": [ 
        "eslint:recommended", 
        "prettier", 
        "@nuxtjs", 
        "plugin:prettier/recommended",
        "plugin:nuxt/recommended" 
    ],
    "plugins": [ 
        "prettier"  
    ],
    "rules": { 
        "prettier/prettier": ["error", {"printWidth": 135}]
    },
    "ignorePatterns": "cypress/*"
}
